# Markdown Manager Environment Configuration
# Copy this file to .env and customize the values for your environment

# Application Environment
ENVIRONMENT=local
DEBUG=true

# Database Configuration
DATABASE_URL=postgresql+asyncpg://postgres:postgres@db:5432/markdown_manager
DATABASE_ECHO=false

# Service URLs (Docker Compose internal networking)
EXPORT_SERVICE_URL=http://export:8001
MARKDOWN_LINT_SERVICE_URL=http://linting:8002
SPELL_CHECK_SERVICE_URL=http://spell-check:8003

# Redis Configuration
REDIS_URL=redis://redis:6379

# JWT Security Configuration
JWT_SECRET_KEY=your-secret-key-here-change-in-production-make-it-long-and-random
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440
SECURE_COOKIES=false

# Storage Configuration
MARKDOWN_STORAGE_ROOT=/documents
CONTAINER_STORAGE_ROOT=/documents
HOST_STORAGE_ROOT=./storage

# GitHub Integration (Optional)
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GITHUB_REDIRECT_URI=http://localhost/api/github/auth/callback
GITHUB_MAX_REPO_SIZE_MB=100
GITHUB_TOTAL_STORAGE_LIMIT_GB=5
GITHUB_CLONE_DEPTH=10
GITHUB_AUTO_PRUNE_DAYS=30
GITHUB_MARKDOWN_ONLY=false

# SMTP Configuration (Optional)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
FROM_EMAIL=noreply@example.com
SMTP_USE_TLS=true

# Service-specific Configuration
MARKDOWN_LINT_PORT=8002
SPELL_CHECK_PORT=8003
NODE_ENV=development

# Event System Configuration
RELAY_DATABASE_URL=postgresql+asyncpg://postgres:postgres@db:5432/markdown_manager
RELAY_REDIS_URL=redis://redis:6379/0
RELAY_BATCH_SIZE=50
RELAY_POLL_INTERVAL=5
RELAY_MAX_RETRY_ATTEMPTS=5
RELAY_LOG_LEVEL=INFO

# Backend Service Configuration
BACKEND_URL=http://backend:8000
ICON_SERVICE_URL=http://backend:8000

# Frontend Configuration
CHOKIDAR_USEPOLLING=true

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Production-specific (uncomment for production)
# ENVIRONMENT=production
# DEBUG=false
# SECURE_COOKIES=true
# DATABASE_URL=postgresql+asyncpg://postgres:secure_password@localhost:5432/markdown_manager
# EXPORT_SERVICE_URL=http://localhost:8001
# MARKDOWN_LINT_SERVICE_URL=http://localhost:8002
# SPELL_CHECK_SERVICE_URL=http://localhost:8003
# REDIS_URL=redis://localhost:6379