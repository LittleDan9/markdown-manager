{
  "name": "markdown-manager-monorepo",
  "version": "1.0.0",
  "description": "Markdown Manager - Frontend and Backend",
  "private": true,
  "scripts": {
    "frontend:install": "cd frontend && npm install",
    "frontend:build": "cd frontend && npm run build",
    "frontend:dev": "cd frontend && npm run serve",
    "backend:install": "cd backend && poetry install",
    "backend:dev": "cd backend && poetry run uvicorn app.main:app --reload --host 0.0.0.0 --port 8000",
    "backend:prod": "cd backend && poetry run uvicorn app.main:app --host 127.0.0.1 --port 8000",
    "install": "npm run frontend:install && npm run backend:install",
    "build": "npm run frontend:build",
    "dev:frontend": "npm run frontend:dev",
    "dev:backend": "npm run backend:dev",
    "deploy": "bash deploy/deploy.sh production",
    "deploy:staging": "bash deploy/deploy.sh staging",
    "deploy:skip-build": "bash deploy/deploy.sh production true",
    "deploy:frontend-only": "bash deploy/deploy.sh production false true"
  },
  "keywords": ["markdown", "editor", "fastapi", "vue"],
  "author": "Dan Little",
  "license": "ISC"
}
