{
  "testEnvironment": "node",
  "testTimeout": 30000,
  "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
  "testMatch": [
    "**/tests/**/*.test.js"
  ],
  "collectCoverageFrom": [
    "**/*.js",
    "!**/node_modules/**",
    "!**/tests/**",
    "!**/lib/dictionaries/**",
    "!server.js"
  ],
  "verbose": true
}