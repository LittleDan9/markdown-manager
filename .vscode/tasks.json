{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "dev-frontend",
      "type": "shell",
      "command": "npm",
      "args": ["run", "debug"],
      "options": {
        "cwd": "${workspaceFolder}/frontend"
      },
      "isBackground": true,
      "problemMatcher": {
        "pattern": [
          {
            "regexp": ".",
            "file": 1,
            "location": 2,
            "message": 3
          }
        ],
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".*Starting.*webpack.*",
          "endsPattern": ".*(Compiled successfully|Project is running at|webpack.*compiled).*"
        }
      }
    },
    {
        "label": "kill-dev-frontend",
        "type": "shell",
        "command": "pkill -f webpack",
        "problemMatcher": []
    }
  ]
}