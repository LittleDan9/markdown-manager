{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "dev-frontend",
      "type": "shell",
      "command": "npm",
      "args": ["run", "debug"],
      "options": {
        "cwd": "${workspaceFolder}/frontend"
      },
      "isBackground": true,
      "problemMatcher": {
        "owner": "custom",
        "pattern": [
          {
            "regexp": "Compiled successfully",
            "file": 1,
            "location": 2,
            "message": 3
          }
        ],
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".*Starting.*webpack.*",
          "endsPattern": ".*(Compiled successfully|Project is running at|webpack.*compiled).*"
        }
      },
      "runOptions": {
        "reevaluateOnRerun": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": true,
        "clear": false
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}