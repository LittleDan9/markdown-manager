{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: FastAPI",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "cwd": "${workspaceFolder}/backend/",
            "args": [
                "app.main:app",
                "--reload",
                "--host",
                "0.0.0.0",
                "--port",
                "8000",
            ],
            "jinja": true
        },
        // 1) Standalone external‚Äêterminal dev server
        {
            "name": "Frontend: Dev Server (external)",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}/frontend",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "debug"
            ],
            "console": "externalTerminal",
            "internalConsoleOptions": "neverOpen"
        },
        // 2) Chrome-attach on localhost:3000
        {
            "name": "Frontend: Chrome Debug",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}/frontend",
            "sourceMaps": true,
            "trace": true,
            // remove the task-based preLaunch; we'll drive it via the compound
            "preLaunchTask": null
        }
    ],
    // 3) Compound that runs the server first, then the browser attach
    "compounds": [
        {
            "name": "Full Frontend Debug",
            "configurations": [
                "Frontend: Dev Server (external)",
                "Frontend: Chrome Debug"
            ]
        }
    ]
}